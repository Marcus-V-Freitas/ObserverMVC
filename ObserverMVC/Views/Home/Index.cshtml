@model Pedido

@{
    ViewData["Title"] = "Atualizar Peido";

    var todosStatus = Enum.GetValues(typeof(PedidoStatus)).Cast<PedidoStatus>()
        .Select(x => new SelectListItem()
        {
            Text = x.ToString(),
            Value = ((int)x).ToString()
        }).ToList();

    var status = (int)Model.PedidoStatus;
    var lista = new SelectList(todosStatus, "Value", "Text", status);
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" method="post">
            <div class="form-group">
                <label asp-for="NumeroPedido" class="control-label"></label>
                <input asp-for="NumeroPedido" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="DataPedido" class="control-label"></label>
                <input asp-for="DataPedido" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="ValorTotal" class="control-label"></label>
                <input asp-for="ValorTotal" class="form-control" readonly="readonly" />
            </div>
            <div class="form-group">
                <label asp-for="PedidoStatus" class="control-label"></label>
                <select asp-for="PedidoStatus" asp-items="todosStatus" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>